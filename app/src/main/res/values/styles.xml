<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:listDivider">@drawable/tendp_divider_bg</item>
    </style>

    <style name="MyTabLayoutTextAppearance"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Title" >
        <item name="android:textSize">14sp</item>
    </style>

    <!--条目左侧textview-->
    <style name="item_left_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--条目间的分割线-->
    <style name="item_slip_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/L</item>
    </style>

    <style name="item_right_arrow">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:layout_height">14dp</item>
    </style>

    <style name="fl_backgroud">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/BJ</item>
    </style>

    <style name="ll_list">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20px</item>
        <item name="android:background">@color/W</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="rl_item">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
    </style>

    <style name="ll_list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="contract_title">
        <item name="android:layout_margin">20px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">26px</item>
        <item name="android:textColor">@color/TWO</item>
        <item name="android:padding">10px</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="update_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>

    </style>

</resources>
