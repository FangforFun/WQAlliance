<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/W"
    android:padding="15dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择线上签约或者线下签约"
        android:textColor="@color/ONE"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        
        <TextView
            android:id="@+id/tv_under_line_sign"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="线下"
            android:textColor="@color/TWO"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/theme_border_bg"/>

        <TextView
            android:id="@+id/tv_on_line_sign"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="线上"
            android:textColor="@color/B"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/theme_border_bg"/>
    </LinearLayout>

</LinearLayout>